
@{
    ViewData["Title"] = "Create";
}

<h1>Assign a User to Ticket</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in @ViewBag.ListOfUsers) {
        <tr>
            <td>
               @item.UserName
            </td>
            <td>
                <a asp-controller="Ticket"  asp-action="AssignUser" asp-route-ticketId="@ViewBag.TicketId" asp-route-userName="@item.UserName"> Assign this user</a>
            </td>
        </tr>
}
    </tbody>
</table>
